{
  "compilerOptions": {
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/types"
    ],
    "types": [
      "node",
    ],
    "target": "ESNext",
    "module": "commonjs",
    "moduleDetection": "auto",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "baseUrl": "@",
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true
  }
}